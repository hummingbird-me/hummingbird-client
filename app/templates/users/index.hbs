<div class="container no-padding">
  <div class="feed-container row">
    {{! Feed Posts }}
    <div class="feed-stream col-sm-12 col-md-8">
      {{#if (and (is-self user) (not (is-object user.avatar)))}}
        {{users/onboarding/feed-notice}}
      {{/if}}

      {{stream-feed/list
        streamType="user_aggr"
        streamId=user.id
        readOnly=(cannot "write post")
        user=user
        pinned=user.pinnedPost}}
    </div>

    <div class="feed-sidebar col-sm-4">
      {{#if (and (is-self user) (not user.profileCompleted))}}
        {{users/onboarding/checklist-progress user=user}}
      {{/if}}

      {{! About User }}
      {{users/about-me user=user}}

      {{! Kitsu Profile Sidebar 1 }}
      {{#unless session.account.isPro}}
        {{ad-unit slot="6852211067"}}
      {{/unless}}

      {{! Favorites }}
      {{users/user-favorites user=user}}

      {{! Kitsu Profile Sidebar 2 }}
      {{#unless session.account.isPro}}
        {{ad-unit slot="9805677468"}}
      {{/unless}}

      {{! Footer }}
      {{sidebar-footer}}
    </div>
  </div>
</div>
