<div class="container">
  <div class="row">
    {{! Kitsu Library Content Ad }}
    <div class="library-ad col-sm-12 no-padding-right">
      {{#unless session.account.isPro}}
        {{ad-unit slot="8096455061"}}
      {{/unless}}
    </div>

    <div class="library-content col-sm-12 col-md-8">
      {{! Search }}
      <section id="library-search" class="library-search">
        <div class="container">
          <div class="row">
            <div class="library-search--wrapper">
              <span class="icon">
                {{svg-jar "search"}}
              </span>
              {{one-way-search
                class="library-search-input"
                placeholder="Search Josh's Library..."
              }}
            </div>
          </div>
        </div>
      </section>

      {{! Library Actions }}
      <section class="library-result-header clearfix">
        {{! Library Layout }}
        <span class="list-type">
          <a href="#" class={{if (eq layoutStyle "grid") "active"}} {{action (mut layoutStyle) "grid"}}>
            {{~svg-jar "grid"~}}
          </a>
          <a href="#" class={{if (eq layoutStyle "list") "active"}} {{action (mut layoutStyle) "list"}}>
            {{~svg-jar "list"~}}
          </a>
        </span>

        {{! Library Sort }}
        <div class="library-filters">
          <form class="form-inline">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Sort by:</label>
            <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
              <option selected>Date Watched: Recent First</option>
              <option value="1">Date Watched: Oldest First</option>
              <option value="2">Rating: High to Low</option>
              <option value="3">Rating: Low to High</option>
              <option value="4">Length: Shortest First</option>
              <option value="5">Length: Longest First</option>
            </select>
          </form>
        </div>
      </section>

      {{! Library Entries }}
      {{component (concat "users/library/library-" layoutStyle)
        libraryEntries=libraryEntries
      }}
    </div>

    {{! Sidebar }}
    <div class="library-sidebar card col-sm-12 col-md-4">
      <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
        <option selected>Josh's Anime</option>
        <option value="1">Josh's Manga</option>
      </select>
      <ul class="library-sections">
        <li class="active">
          <a href="#">
            All Anime
            <span class="library-section--count">325</span>
          </a>
        </li>
        <li>
          <a href="#">
            Currently Watching
            <span class="library-section--count">325</span>
          </a>
        </li>
        <li>
          <a href="#">
            Plan to Watch
            <span class="library-section--count">325</span>
          </a>
        </li>
        <li>
          <a href="#">
            Completed
            <span class="library-section--count">325</span>
          </a>
        </li>
        <li>
          <a href="#">
            On Hold
            <span class="library-section--count">325</span>
          </a>
        </li>
        <li>
          <a href="#">
            Dropped
            <span class="library-section--count">325</span>
          </a>
        </li>
      </ul>
      <h6>Tools</h6>
      <ul class="library-tools">
        <li>
          <a href="#">Stats</a>
        </li>
        <li>
          <a href="#">Import / Export</a>
        </li>
        <li>
          <a href="#">Batch Edit</a>
        </li>
      </ul>
      {{! Kitsu Library Sidebar Ad }}
      {{#unless session.account.isPro}}
        {{ad-unit slot="6628225068"}}
      {{/unless}}
    </div>
  </div>
</div>

