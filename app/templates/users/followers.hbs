<div class="container">
  <div class="row">
    {{#if model.taskInstance.isRunning}}
      <div class="text-xs-center w-100 m-t-1 m-b-1">
        {{loading-spinner size="large"}}
        <p>Loading Users...</p>
      </div>
    {{else if model.taskInstance.error}}
      <div class="text-xs-center w-100 m-t-1 m-b-1">
        {{t "errors.load"}}
      </div>
    {{else if taskValue}}
      {{#infinite-pagination onPagination=(route-action "onPagination")}}
        {{! @TODO: Componentnize }}
        {{#each taskValue as |follow|}}
          {{#if follow.follower}}
            <div class="card user-card col-sm-3">
              <a href={{href-to "users.index" follow.follower}}>
                <img class="card-img-top" src={{image follow.follower.coverImage "tiny"}}>
              </a>
              <div class="card-block">
                <a href={{href-to "users.index" follow.follower}}>
                  <img class="card-img-avatar" src={{image follow.follower.avatar "small"}}>
                </a>
                <a href={{href-to "users.index" follow.follower}}>
                  <h4 class="card-title">{{follow.follower.name}}</h4>
                </a>

                {{#if (not (is-self follow.follower))}}
                  {{follow-button user=follow.follower}}
                {{else}}
                  <button class="button button--primary" disabled="disabled">
                    Hey, that's you!
                  </button>
                {{/if}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      {{/infinite-pagination}}
    {{else}}
      <div class="text-xs-center w-100 m-t-1 m-b-1">
        No Users Found.
      </div>
    {{/if}}
  </div>
</div>
