{{#explore/explore-page
  title=(t (concat "titles." mediaType ".index"))
  mediaType=mediaType}}
  {{explore/explore-section
    type="top-current"
    mediaType=mediaType
    sort="-userCount"
    filters="status:current"
  }}
  {{explore/explore-section
    type="top-upcoming"
    mediaType=mediaType
    sort="-userCount"
    filters="status:upcoming"
  }}
  {{explore/explore-section
    type="highest-rated"
    mediaType=mediaType
    sort="-averageRating"
  }}
  {{explore/explore-section
    type="most-popular"
    mediaType=mediaType
    sort="-userCount"
  }}
{{/explore/explore-page}}
