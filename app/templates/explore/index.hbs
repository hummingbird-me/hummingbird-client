<div class='explore-page'>
  <h3>{{t (concat "titles." mediaType ".index")}}</h3>
  {{explore/category-widget/index}}
  {{explore/explore-search}}
  <div class="explore-content">
    {{explore/explore-section
      type="top-current"
      mediaType=mediaType
      sort="-userCount"
      filters="status:current"
    }}
    {{explore/explore-section
      type="top-upcoming"
      mediaType=mediaType
      sort="-userCount"
      filters="status:upcoming"
    }}
    {{explore/explore-section
      type="highest-rated"
      mediaType=mediaType
      sort="-averageRating"
    }}
    {{explore/explore-section
      type="most-popular"
      mediaType=mediaType
      sort="-userCount"
    }}
  </div>
</div>