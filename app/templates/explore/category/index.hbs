{{#explore/explore-page
  title=(titleize (concat categoryName " " mediaType))
  mediaType=mediaType}}
  {{explore/explore-section
    type="newly-released"
    mediaType=mediaType
    categoryName=categoryName
    sort="-startDate"
    filters="current"
    more="explore.category.more"
    limit=15
  }}
  {{explore/explore-section
    type="trending"
    mediaType=mediaType
    categoryName=categoryName
    more="explore.category.more"
    limit=15
  }}
  {{explore/explore-section
    type="most-popular"
    mediaType=mediaType
    categoryName=categoryName
    sort="-userCount"
    more="explore.category.more"
    limit=15
  }}
{{/explore/explore-page}}
