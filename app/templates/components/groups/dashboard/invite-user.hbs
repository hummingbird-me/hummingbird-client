<div class="user-search-item">
  {{lazy-image src=(image user.avatar "small")}}
  <a href={{href-to "users.index" user.name}} target="_blank">
    {{user.name}}
  </a>
  <div class="user-search-item-actions">
    {{#unless (or isInvited (is-self user))}}
      <button class="button button--primary"
        disabled={{if (or inviteMemberTask.isRunning getInviteStatusTask.isRunning) "disabled"}}
        onclick={{perform inviteMemberTask user}}>
        {{#if (or inviteMemberTask.isRunning getInviteStatusTask.isRunning)}}
          {{loading-spinner}}
        {{else}}
          {{t "groups.dashboard.members.invites-list.invite"}}
        {{/if}}
      </button>
    {{/unless}}
  </div>
</div>