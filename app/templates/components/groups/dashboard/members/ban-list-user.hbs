<th scope="row">{{lazy-image src=(image ban.user.avatar "small")}}</th>
<td class="leader-name">
  <a href={{href-to "users.index" ban.user.name}}>
    {{ban.user.name}}
  </a>
</td>
<td class="edit-leader">
  <a href="#" {{action (perform unbanUserTask)}}>
    {{#if unbanUserTask.isRunning}}
      {{loading-spinner size="small"}}
    {{else}}
      {{t "groups.dashboard.members.bans.unban"}}
    {{/if}}
  </a>
</td>