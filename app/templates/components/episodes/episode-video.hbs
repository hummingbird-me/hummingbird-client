{{! Player }}
{{#if video}}
  {{episodes/video-player video=video onMark=(action (mut isMarking) true) isPlaying=isPlaying}}
{{/if}}
{{! Updater }}
{{#if isMarking}}
  {{episodes/video-updater episode=episode}}
{{/if}}
{{! Picker }}
{{episodes/video-picker
  onChange=(action (mut video))
  onClickCurrent=(action (toggle 'isPlaying' this))
  isPlaying=isPlaying
  episode=episode
  selectedVideo=video
  media=media
}}
