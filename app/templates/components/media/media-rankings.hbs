{{#if media.popularityRank}}
  <span class="ranking ranking-popularity">
    {{svg-jar "heart-filled"}}
    {{t "media.show.summary.ranking.popularity" type=media.modelType rank=media.popularityRank}}
  </span>
{{/if}}

{{#if media.ratingRank}}
  <span class="ranking ranking-rating">
    {{svg-jar "star"}}
    {{t "media.show.summary.ranking.rating" type=media.modelType rank=media.ratingRank}}
  </span>
{{/if}}