{{#if (or (eq embed.kind "video") (eq embed.kind "video.other"))}}
  <a href="#" {{action "reveal"}} class="embed-video">
    {{lazy-image src=embed.image.url}}
    <div class="embed-video-overlay"></div>
    <div class="embed-video-info">{{embed.site_name}} - {{truncate embed.title 50}}</div>
    {{svg-jar "trailer"}}
  </a>
{{else}}
  <a href={{url}} target="_blank" class="embed-article {{orientation}}">
    {{lazy-image src=embed.image.url}}
    <div class="embed-info">
      <div class="embed-sitename">{{embed.site_name}}</div>
      <div class="embed-title">{{truncate embed.title 140}}</div>
    </div>
  </a>
{{/if}}
