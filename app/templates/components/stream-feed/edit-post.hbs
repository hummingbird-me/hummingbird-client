{{#bootstrap/bs-modal id=modalId onClose=onClose as |modal|}}
  {{#modal.header}}
    <div class="text-xs-center">
      <h4>Edit Post</h4>
      <small>Unfortunately, we can't allow you to edit your tagged media yet.</small>
    </div>
  {{/modal.header}}

  {{#modal.body}}
    {{#if isEditable}}
      {{stream-feed/create-post
        post=post
        uploads=uploads
        isExpanded=true
        isEditing=true
        unitNumber=unitNumber
        shouldUnit=(not (is-empty unitNumber))
        onCreate=(perform updatePost)
      }}
    {{else}}
      <div class="alert alert-danger">
        <p>Sorry, but you are unable to edit a post that is older than 30 minutes.</p>
      </div>
    {{/if}}
  {{/modal.body}}
{{/bootstrap/bs-modal}}