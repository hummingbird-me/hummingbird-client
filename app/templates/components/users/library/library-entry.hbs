<div class="library-entry container" data-test-selector="library-entry">
  <div class="entry-wrapper row">
    {{! Entry Title }}
    <div class="col-md-12 col-lg-7 entry-left">
      <div class="entry-poster">
        {{lazy-image url=(image media.posterImage "tiny") class="drop-thumb"}}
      </div>
      <div class="entry-title" data-test-selector="library-entry-title">
        <span>{{media.computedTitle}}</span>
      </div>
    </div>

    <div class="col-md-12 col-lg-5 entry-right">
      {{! Entry Indicators }}
      <div class="entry-indicators">
        {{! Saving Activity }}
        {{#if (or saveEntry.isRunning saveEntryDebounced.isRunning)}}
          <div class="entry-indicator-saving d-inline-block">
            <span class="hint--top hint--bounce hint--rounded" aria-label="Saving...">
              {{loading-spinner size="small"}}
            </span>
          </div>
        {{/if}}

        {{! Rewatching }}
        {{#if (and (gt entry.reconsumeCount 0) (eq entry.status "current"))}}
          <div class="entry-indicator-rewatching d-inline-block">
            <span class="hint--top hint--bounce hint--rounded" aria-label="{{t (concat "users.library.reconsuming." (model-type media))}}">
              {{! @Josh -- Rewatching SVG }}
            </span>
          </div>
        {{/if}}

        {{! Notes }}
        {{#if entry.notes}}
          <div class="entry-indicator-notes d-inline-block">
            <span class="hint--top hint--bounce hint--rounded" aria-label="{{truncate entry.notes 60}}">
              {{! @Josh -- Notes SVG }}
            </span>
          </div>
        {{/if}}
      </div>

      {{! Entry Progress }}
      <div class="entry-progress">
        {{#if (can-mutate user entry)}}
          {{one-way-number entry.progress
            min=0
            max=media.unitCount
            update=(queue
              (pipe-action (action "sanitizeNumber") (action (mut entry.progress)))
              (perform saveEntryDebounced)
            )
            placeholder="0"
          }}
          <span>
            <span class="sep">/</span>
            {{totalProgressText}}
          </span>
        {{else}}
          <span>
            {{entry.progress}} / {{totalProgressText}}
          </span>
        {{/if}}
      </div>

      {{! Entry Rating }}
      <div class="entry-rating">
        {{#if entry.rating}}
          <span class="entry-rating-star">{{svg-jar "star"}}</span>
        {{/if}}
        <span>{{ratingText}}</span>
      </div>

      {{! Entry Type }}
      <div class="entry-type">
        <span>{{typeText}}</span>
      </div>
    </div>
  </div>

  {{! Expanded Info }}
  {{#if isExpanded}}
    <div class="library-dropdown row">
      <div class="col-sm-12 arrow-wrapper">
        <div class="drop-arrow"></div>
      </div>

      {{! Poster Image }}
      <div class="col-lg-1 hidden-md-down columns no-padding-right">
        {{lazy-image url=(image media.posterImage "medium") class="drop-thumb"}}
      </div>

      {{! Media Info }}
      <div class="col-md-12 col-lg-7 columns">
        <h4 class="drop-title">
          <a href={{href-to (concat (model-type media) ".show") media}}>
            {{media.computedTitle}}
          </a>
        </h4>
        <p class="drop-description">
          {{text-clipper media.synopsis length=350 options=(hash maxLines=3)}}
        </p>
        <div class="entry-notes">
          {{#if (can-mutate user entry)}}
            {{one-way-textarea entry.notes
              update=(queue
                (action (mut entry.notes))
                (perform saveEntryDebounced)
              )
              placeholder=(t "users.library.notes" title=media.computedTitle)
              class="personal-notes"
            }}
          {{else}} {{! Only show if the user has notes }}
            {{#if entry.notes}}
              {{one-way-text entry.notes
                  class="personal-notes"
                  readonly=true}}
            {{/if}}
          {{/if}}
        </div>
      </div>

      {{! Options }}
      <div class="col-md-12 col-lg-4 columns">
        <div class="drop-options">
          {{#if (can-mutate user entry)}}
            {{! Library Status }}
            <div class="status-select">
              {{library-dropdown
                entry=entry
                methods=(hash
                  update=(queue
                    (action (mut entry.status))
                    (perform saveEntry)
                  )
                  delete=(action "delete")
                )
              }}
            </div>
          {{/if}}

          <div class="dropdown-rating">
            {{! Privacy }}
            {{#if (can-mutate user entry)}}
              {{#bootstrap/bs-dropdown as |dropdown|}}
                {{#dropdown.button}}
                  {{if entry.private (t "users.library.private") (t "users.library.public")}}
                {{/dropdown.button}}
                {{#dropdown.menu}}
                  {{#dropdown.menu-item
                    onClick=(queue
                      (action (mut entry.private) (not entry.private))
                      (perform saveEntry)
                    )
                  }}
                    {{if entry.private (t "users.library.public") (t "users.library.private")}}
                  {{/dropdown.menu-item}}
                {{/dropdown.menu}}
              {{/bootstrap/bs-dropdown}}
            {{else}}
              <h6 class="rating-label">Rating</h6>
            {{/if}}

            {{! Rating }}
            <div class="rating-options">
              {{star-rating entry.rating
                readOnly=(not (can-mutate user entry))
                onClick=(queue
                  (action (mut entry.rating))
                  (perform saveEntry)
                )
              }}
            </div>
          </div>

          {{! Rewatch }}
          <div class="rewatch">
            {{#if (can-mutate user entry)}}
              <button type="button" class="button" {{action (queue
                (action (mut entry.reconsumeCount) (inc entry.reconsumeCount))
                (action (mut entry.progress) 0)
                (action (mut entry.status) "current")
                (perform saveEntry))}}>
                {{t (concat "users.library.reconsume." (model-type media))}}
              </button>
            {{/if}}

            <label>
              <span>{{t (concat "users.library.reconsumed." (model-type media))}}</span>
              {{#if (can-mutate user entry)}}
                {{one-way-number entry.reconsumeCount
                  update=(queue
                    (pipe-action (action "sanitizeNumber") (action (mut entry.reconsumeCount)))
                    (perform saveEntryDebounced)
                  )
                }}
              {{else}}
                <span>{{entry.reconsumeCount}}</span>
              {{/if}}
              <span>{{t "users.library.times"}}</span>
            </label>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>
