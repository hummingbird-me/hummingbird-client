{{#bootstrap/bs-modal class="library-edit-modal" onClose=onClose as |modal|}}
  {{#modal.body}}
    <div class="edit-modal--body">
      <h6>Fullmetal Alchemist</h6>
      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Library Status</label>
        <div class="col-sm-7">
          <select class="form-control" id="exampleSelect1">
            <option>Currently Watching</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Progress</label>
        <div class="col-sm-7">
          <div class="input-group mb-2 mr-sm-2 mb-sm-0">
            <input type="number" class="form-control" id="inlineFormInputGroup" placeholder="0">
            <div class="input-group-addon">of 24 episodes</div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Your Rating</label>
        <div class="col-sm-7">
          <select class="form-control" id="exampleSelect1">
            <option>:( AWFUL</option>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Rewatch Count</label>
        <div class="col-sm-7">
          <div class="input-group">
            <input type="number" class="form-control" placeholder="0">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button">Start Rewatch</button>
            </span>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Privacy</label>
        <div class="col-sm-7">
          <select class="form-control" id="exampleSelect1">
            <option>Public</option>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Started</label>
        <div class="col-sm-7">
            <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
        </div>
      </div>

      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Finished</label>
        <div class="col-sm-7">
            <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
        </div>
      </div>

      <div class="form-group row">
        <label for="example-text-input" class="col-sm col-form-label">Personal Notes</label>
        <div class="col-sm-7">
            <textarea class="form-control" rows="2"></textarea>
        </div>
      </div>

    </div>
  {{/modal.body}}
  {{#modal.footer}}
    <button class="btn button--secondary" type="button">{{svg-jar "trash"}}</button>
    <button class="btn button--primary" type="button">Save Changes</button>
  {{/modal.footer}}
{{/bootstrap/bs-modal}}
