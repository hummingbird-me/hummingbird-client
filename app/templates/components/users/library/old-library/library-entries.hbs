<div class="section-head" data-test-library-entries>
  <span class="section-title">{{statusName}}</span>
  <span class="section-stats" data-test-library-entries-stats>{{stats}}</span>
</div>

{{#each entries as |entry|}}
  {{#occludable-area rootMargin=(hash bottom=1000) bufferClass="library-occlusion-buffer"}}
    {{users/library/library-entry
      entry=entry
      save=save
    }}
  {{/occludable-area}}
{{else}}
  <div class="empty-wrapper">
    <div class="library-section-empty">
      <span>
        {{#if (can "edit user" user)}}
          {{t "users.library.empty.owner"
            link=(href-to (concat mediaType ".index"))
            type=(capitalize mediaType)
            htmlSafe=true}}
        {{else}}
          {{t "users.library.empty.guest" user=user.name}}
        {{/if}}
      </span>
    </div>
  </div>
{{/each}}
