{{#bootstrap/bs-modal id=modalId onClose=onClose as |modal|}}
  {{#modal.header}}
    <h3 class="text-xs-center">
      {{t "components.users.past-name.title"}}
    </h3>
  {{/modal.header}}

  {{#modal.body}}
    <ul>
      {{#each user.pastNames as |name|}}
        <li>{{name}}</li>
      {{else}}
        <li><i>{{t "components.users.past-name.none"}}</i></li>
      {{/each}}
    </ul>
  {{/modal.body}}
{{/bootstrap/bs-modal}}
