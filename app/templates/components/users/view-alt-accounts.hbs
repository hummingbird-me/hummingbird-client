{{#bootstrap/bs-modal id=modalId onClose=onClose as |modal|}}
  {{#modal.header}}
    <h3 class="text-xs-center">
      {{t "components.users.alt-name.title" user=user.name}}
    </h3>
  {{/modal.header}}

  {{#modal.body}}
    {{#if loadAlts.isRunning}}
      {{loading-spinner size="large"}}
    {{else}}
      <ul>
        {{#each alts as |alt|}}
          <li>
            <a href={{href-to "users.index" alt.id}}>
              {{alt.name}}
            </a>
            (Weight: {{decimal-number alt.weight}})
          </li>
        {{else}}
          <li><i>{{t "components.users.alt-name.none"}}</i></li>
        {{/each}}
      </ul>
    {{/if}}
  {{/modal.body}}
{{/bootstrap/bs-modal}}
