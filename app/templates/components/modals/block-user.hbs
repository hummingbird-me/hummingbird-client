{{#bootstrap/bs-modal
  id=modalId
  onClose=onClose as |modal|}}
  {{#modal.header}}
    <h3 class="text-xs-center">
      {{t "reaction-modal.modals.block-user.header"}}
    </h3>
  {{/modal.header}}

  {{#modal.body}}
    <h6>{{t "reaction-modal.modals.block-user.body.header"}}</h6>
    <p>
      {{t "reaction-modal.modals.block-user.body.text"}}
    </p>
  {{/modal.body}}

  {{#modal.footer}}
    <button class="button button--primary btn-lg btn-block" disabled={{if blockUser.isRunning "disabled"}} onclick={{perform blockUser}}>
      {{#if blockUser.isRunning}}
        {{loading-spinner size="small"}}
      {{else}}
        {{t "reaction-modal.modals.block-user.button" user=user.name}}
      {{/if}}
    </button>
  {{/modal.footer}}
{{/bootstrap/bs-modal}}
