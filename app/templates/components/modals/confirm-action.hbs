{{#bootstrap/bs-modal id=modalId onClose=onClose as |modal|}}
  {{#modal.body}}
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      <h4 class="text-xs-center">
        {{#if title}}
          {{title}}
        {{else}}
          {{t "modals.confirm.text"}}
        {{/if}}
      </h4>
      {{#if text}}
        <p class="text-xs">
          {{text}}
        </p>
      {{/if}}
    {{/if}}
  {{/modal.body}}

  {{#modal.footer}}
    <button class="button button--primary btn-lg btn-block" onclick={{action "onConfirm"}}>
      {{t "modals.confirm.button"}}
    </button>
  {{/modal.footer}}
{{/bootstrap/bs-modal}}
