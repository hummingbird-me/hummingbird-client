{{#bootstrap/bs-modal id=modalId onClose=onClose as |modal|}}
  {{#modal.body}}
    <div style={{posterImageStyle}} class="reaction-poster">
      <div class="reaction-overlay">
        <div class="reaction-content">
          {{#if editing}}
            <span class="reaction-edit-warning">
              {{t "reaction-modal.edit-warning"}}
            </span>
          {{/if}}
          <div class="reaction-header">
            <span class="reaction-media-title">{{media.yearlessTitle}}</span>
            <span class="reaction-media-year">{{media.year}}</span>
            <span class="reaction-media-remaining {{if hasInvalidReaction "is-invalid"}}">{{remaining}}</span>
          </div>
          {{expanding-textarea reaction.reaction
            update=(action (mut reaction.reaction))
            placeholder="React to dis shit"
            maxlength=145
          }}
        </div>
        <button
          onclick={{perform createReactionTask}}
          disabled={{or hasInvalidReaction (is-empty reaction.reaction)}}>
          {{t (concat "reaction-modal." (if editing "edit" "post"))}}
        </button>
      </div>
    </div>
  {{/modal.body}}
{{/bootstrap/bs-modal}}