<span class="button-label" data-test-selector="follow-button">
  {{#if (or getFollowStatus.isRunning toggleFollow.isRunning)}}
    {{loading-spinner}}
  {{else}}
    {{#if isFollowing}}
      {{t "follow-button.unfollow"}}
    {{else}}
      {{t "follow-button.follow"}}
    {{/if}}
  {{/if}}
</span>