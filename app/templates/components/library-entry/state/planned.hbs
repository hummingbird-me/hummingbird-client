{{#unless hideProgress}}
  <span class="state-helper">
    {{t-html "library-entry.state.saved-in"
      link=(href-to "users.library" session.account.name (query-params status=libraryEntry.status))
      status=(t (concat "library-shared." libraryEntry.status) type=libraryEntry.media.modelType)
    }}
  </span>
{{/unless}}

{{! Progress - If the user has progress }}
{{#if (and (gt libraryEntry.progress 0) (not hideProgress))}}
  {{library-entry/progress
    libraryEntry=libraryEntry
    onProgressChange=onProgressChange
    showBorderTop=true
  }}
{{/if}}

<button class="button button--secondary" {{action onStatusChange "current"}}>
  {{t "library-entry.state.watching-this" type=libraryEntry.media.modelType}}
</button>

<button class="button button--secondary button--muted" {{action onRemove}}>
  {{t "library-entry.state.remove-from-library"}}
</button>